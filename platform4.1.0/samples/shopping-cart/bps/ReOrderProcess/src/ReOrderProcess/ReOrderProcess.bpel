                    </bpel:sequence>
                    <bpel:else>
                        <bpel:sequence name="ElseSequence">
                            <bpel:empty name="Ignore"></bpel:empty>
                        </bpel:sequence>
                    </bpel:else>
                </bpel:if>
                <bpel:assign name="IncrementIterator">
                	<bpel:copy>
                        <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                            <![CDATA[$itemIterator + 1]]>
