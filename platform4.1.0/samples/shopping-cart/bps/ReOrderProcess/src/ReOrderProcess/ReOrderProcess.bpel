                                    <![CDATA[$DSPLResponse.parameters/dsreorder:Product[$itemIterator]/dsreorder:productCode]]>
                                </bpel:from>
                                <bpel:to part="parameters" variable="DSPLRequest1">
                                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[dsupdate:productCode]]></bpel:query>
                                </bpel:to>
                            </bpel:copy>
                            <bpel:copy>
                                <bpel:from>
                                    
                                    <![CDATA[$DSPLResponse.parameters/dsreorder:Product[$itemIterator]/dsreorder:reorderQuantity]]>
                                </bpel:from>
                                <bpel:to part="parameters" variable="DSPLRequest1">
                                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[dsupdate:increment]]></bpel:query>
                                </bpel:to>
                            </bpel:copy>
                        </bpel:assign>
                        <!--bpel:invoke name="Invoke"></bpel:invoke-->
