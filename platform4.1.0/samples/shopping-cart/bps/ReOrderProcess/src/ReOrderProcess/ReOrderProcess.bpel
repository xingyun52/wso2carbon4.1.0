                    <bpel:condition><![CDATA[$SupplierPLResponse.order/supxsd:orderOk = true()]]></bpel:condition>
                    <bpel:sequence name="IfSequence">
                        <bpel:assign validate="no" name="AssignIF">
                            <bpel:copy>
                                <bpel:from>
