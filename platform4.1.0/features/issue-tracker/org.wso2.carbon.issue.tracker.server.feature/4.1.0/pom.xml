<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>issue-tracker-feature</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.issue.tracker.server.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Issue tracker server Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the core bundles required for Back-end issue tracker
        functionality
    </description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.issue.tracker.adapter</artifactId>
            <version>${wso2carbon.version.issuetracker}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.issue.tracker.core</artifactId>
            <version>${wso2carbon.version.issuetracker}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.issue.tracker.mgt</artifactId>
            <version>${wso2carbon.version.issuetracker}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.jira.reporting</artifactId>
            <version>${wso2carbon.version.issuetracker}</version>
        </dependency>
 	<dependency>
                <groupId>org.json.wso2</groupId>
                <artifactId>json</artifactId>
                <version>1.0.0.wso2v1</version>
            </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.account.mgt.stub</artifactId>
            <version>${wso2carbon.version.issuetracker}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.issue.tracker.server</id>
                            <propertiesFile>../../../etc/feature.properties</propertiesFile>
                            <!--<adviceFile>-->
                                <!--<properties>-->
                                    <!--<propertyDef>org.wso2.carbon.p2.category.type:server-->
                                    <!--</propertyDef>-->
                                    <!--<propertyDef>org.eclipse.equinox.p2.type.group:false-->
                                    <!--</propertyDef>-->
                                <!--</properties>-->
                            <!--</adviceFile>-->
                            <bundles>
                                <bundleDef>
                                    org.wso2.carbon:org.wso2.carbon.issue.tracker.adapter:${wso2carbon.version.issuetracker}
                                </bundleDef>
                                <bundleDef>
                                    org.wso2.carbon:org.wso2.carbon.issue.tracker.core:${wso2carbon.version.issuetracker}
                                </bundleDef>
                                <bundleDef>
                                    org.wso2.carbon:org.wso2.carbon.issue.tracker.mgt:${wso2carbon.version.issuetracker}
                                </bundleDef>
                                <bundleDef>
                                    org.wso2.carbon:org.wso2.carbon.jira.reporting:${wso2carbon.version.issuetracker}
                                </bundleDef>
				<bundleDef>org.json.wso2:json:1.0.0.wso2v1</bundleDef>
				<bundleDef>org.wso2.carbon:org.wso2.carbon.account.mgt.stub:${wso2carbon.version.issuetracker}</bundleDef>
				<bundleDef>org.apache.axis.wso2:axis:1.4.0.wso2v1</bundleDef>
				<bundleDef>org.wso2.carbon:atlassian-jira:1.0.0.wso2v1</bundleDef>
                            </bundles>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.core.server:${wso2carbon.version}
                                </importFeatureDef>
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
