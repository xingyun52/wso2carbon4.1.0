<config>
	<monitor>
		<asCluster>
			<!--columnFamily>clusterSummary</columnFamily-->
			<indexName>asClusterSummaryIndex</indexName>
			<!--indexColumns>dataCenter,cluster</indexColumns-->
		</asCluster>
                <esbCluster>
                        <indexName>esbClusterSummaryIndex</indexName>
                </esbCluster>
		<service>
			<!--columnFamily>serviceSummary</columnFamily-->
                        <indexName>serviceSummaryIndex</indexName>
                        <!--indexColumns>dataCenter,cluster,service_name</indexColumns-->
		</service>
		<operation>
                        <!--columnFamily>operationSummary</columnFamily-->
                        <indexName>operationSummaryIndex</indexName>
                        <!--indexColumns>dataCenter,cluster,service_name,operation_name</indexColumns-->
		</operation>
		<proxy>
                        <!--columnFamily>proxySummary</columnFamily-->
                        <indexName>proxySummaryIndex</indexName>
                        <!--indexColumns>dataCenter,cluster,resource_id</indexColumns-->
		</proxy>
	</monitor>
</config>
