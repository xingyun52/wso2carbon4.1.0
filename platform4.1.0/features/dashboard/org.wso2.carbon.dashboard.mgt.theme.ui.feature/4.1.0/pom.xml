<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>dashboard-feature</artifactId>
        <version>4.1.0</version>

<relativePath>../../pom.xml</relativePath>
    </parent>

    <version>4.1.0</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.dashboard.mgt.theme.ui.feature</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Dashboard theme UI Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the bundles required for dashboard theme front-end
    </description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.dashboard.mgt.theme.common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.dashboard.mgt.theme.ui</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.dashboard.mgt.theme.stub</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.resource.stub</artifactId>
            <version>${carbon.platform.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.dashboard.mgt.theme.ui</id>
                            <propertiesFile>../../../../etc/feature.properties</propertiesFile>
                            <adviceFile>
                                <properties>
                                    <propertyDef>org.wso2.carbon.p2.category.type:console</propertyDef>
                                    <propertyDef>org.eclipse.equinox.p2.type.group:false</propertyDef>
                                </properties>
                            </adviceFile>
                            <bundles>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.dashboard.mgt.theme.common</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.dashboard.mgt.theme.ui</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.dashboard.mgt.theme.stub</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.registry.resource.stub</bundleDef>
                            </bundles>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.core.ui:${wso2carbon.version}</importFeatureDef>
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
    </properties>

</project>
