<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>apimgt-feature</artifactId>
        <version>4.1.0</version>
<relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.apimgt.server.feature</artifactId>
    <version>1.1.1</version>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Api management Server Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the core bundles required for API management back end
    </description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.core</artifactId>
            <version>4.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.ws.client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.governance.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.api</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.impl</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.hostobjects</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.gateway</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.keymgt</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.keymgt.client</artifactId>
            <version>1.1.1</version>
        </dependency>
	<dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.handlers.security.stub</artifactId>
	    <version>4.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.core</artifactId>
            <version>4.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.usage.publisher</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.apimgt.usage.client</artifactId>
            <version>1.1.1</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>           
 <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.1</version>
                <executions>
                   <execution>
                        <id>clean-APIM-h2-database</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <delete file="src/main/resources/conf/WSO2AM_DB.h2.db"/>
                            </tasks>
                        </configuration>
                    </execution>

                    <execution>
                        <id>create-API-manager-database</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>                        
                        <configuration>
                            <tasks>
                                <path id="h2.classpath">
                                    <path refid="maven.compile.classpath"/>
                                </path>
                                <echo
                                        message="########### Creating API Manager Database ##############"/>
                                <sql
                                        driver="org.h2.Driver"
                                        url="jdbc:h2:${basedir}/src/main/resources/conf/WSO2AM_DB;create=true"
                                        userid="wso2carbon" password="wso2carbon" autocommit="true"
                                        onerror="continue">
                                    <classpath>
                                        <path refid="h2.classpath"/>
                                    </classpath>
                                    <fileset file="${basedir}/src/main/resources/apimgt/h2.sql"/>
                                </sql>
                                <echo
                                        message="##################### END ########################"/>
                            </tasks>
                        </configuration>
                    </execution>                   
                </executions>
            </plugin>

            <plugin>
		        <artifactId>maven-resources-plugin</artifactId>
		        <executions>
		            <execution>
		                <id>copy-resources</id>
		                <!--phase>generate-resources</phase-->
		                <phase>package</phase>
		                <goals>
		                    <goal>copy-resources</goal>
		                </goals>
		                <configuration>
		                    <outputDirectory>src/main/resources</outputDirectory>
		                    <resources>
		                        <resource>
		                            <directory>resources</directory>
		                            <includes>
		                                <include>conf/api-manager.xml</include>                                   
		                                <include>conf/master-datasources.xml</include>
						                <include>conf/WSO2AM_DB.h2.db</include>
						                <include>**/*.sql</include>
		                                <include>p2.inf</include>
		                                <include>build.properties</include>
		                            </includes>
		                        </resource>
		                    </resources>
		                </configuration>
		            </execution>
		        </executions>
		    </plugin>


            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>4-p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>org.wso2.carbon.apimgt.server</id>
                            <propertiesFile>../../../etc/feature.properties</propertiesFile>
                            <adviceFile>
                                <properties>
                                    <propertyDef>org.wso2.carbon.p2.category.type:server
                                    </propertyDef>
                                    <propertyDef>org.eclipse.equinox.p2.type.group:false
                                    </propertyDef>
                                </properties>
                            </adviceFile>
                            <bundles>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.api</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.impl</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.hostobjects</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.gateway</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.keymgt</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.keymgt.client</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.usage.publisher</bundleDef>
                                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.usage.client</bundleDef>
				                <bundleDef>org.wso2.carbon:org.wso2.carbon.apimgt.handlers.security.stub</bundleDef>
				<bundleDef>org.wso2.carbon:org.wso2.carbon.identity.user.registration.stub:${carbon.platform.version}</bundleDef>
                            </bundles>
                            <importBundles>
                                  <importBundleDef>org.wso2.carbon:org.wso2.carbon.identity.authentication:${carbon.platform.version}</importBundleDef>
                                  <importBundleDef>org.wso2.carbon:org.wso2.carbon.identity.thrift.authentication:${carbon.platform.version}</importBundleDef>
                                  <importBundleDef>org.wso2.carbon:org.wso2.carbon.hostobjects.sso:1.0.1</importBundleDef>
                                  <importBundleDef>libthrift.wso2:libthrift:0.8.0.wso2v1</importBundleDef>
                            </importBundles>
                            <importFeatures>
                                <importFeatureDef>org.wso2.carbon.core.server:${carbon.platform.version}</importFeatureDef>
                                <importFeatureDef>org.wso2.carbon.registry.core:${carbon.platform.version}</importFeatureDef>
                                <!--<importFeatureDef>org.wso2.carbon.identity.core.server:${wso2carbon.version}</importFeatureDef>-->
                            </importFeatures>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
