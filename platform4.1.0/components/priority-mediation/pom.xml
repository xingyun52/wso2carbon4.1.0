<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>priority-mediation</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon-Priority Mediation Aggregator Module</name>
    <url>http://wso2.org</url>
    
    <modules>
     	<module>org.wso2.carbon.priority.executors/4.1.0</module>
	<module>org.wso2.carbon.priority.executors.ui/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.axis2.wso2</groupId>
                <artifactId>axis2</artifactId>
                <version>${orbit.version.axis2.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.registry.core</artifactId>
                <version>${wso2carbon.version.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.utils</artifactId>
                <version>${wso2carbon.version.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.synapse</groupId>
                <artifactId>synapse-core</artifactId>
                <version>${synapse.version.priority-mediation}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.mediation.initializer</artifactId>
                <version>${wso2carbon.version.priority-mediation}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
   
     <properties>
        <wso2carbon.version.priority-mediation>${wso2carbon.version}</wso2carbon.version.priority-mediation>
        <synapse.version.priority-mediation>${synapse.version}</synapse.version.priority-mediation>
        <orbit.version.axis2.priority-mediation>${orbit.version.axis2}</orbit.version.axis2.priority-mediation>
        <axis2.osgi.version.range.priority-mediation>${axis2.osgi.version.range}</axis2.osgi.version.range.priority-mediation>
        <axiom.osgi.version.range.priority-mediation>${axiom.osgi.version.range}</axiom.osgi.version.range.priority-mediation>
    </properties>
</project>
