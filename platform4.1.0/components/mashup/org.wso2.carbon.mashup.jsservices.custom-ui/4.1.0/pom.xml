<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>mashup</artifactId>
        <version>4.1.0</version>
<relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.mashup.jsservices.custom-ui</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Mashup - JavaScript Service Custom UI</name>
    <url>http://wso2.org</url>
    <description>WSO2 Mashup JavaScript Service Custom UI Bundle</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.mashup.utils</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.ui</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Activator>
                            org.wso2.carbon.mashup.jsservices.custom.ui.internal.Activator
                        </Bundle-Activator>
                        <Private-Package>org.wso2.carbon.mashup.jsservices.custom.ui.internal
                        </Private-Package>
                        <Export-Package>org.wso2.carbon.mashup.jsservices.custom.ui.*,
                        </Export-Package>
                        <Import-Package>
                            !org.wso2.carbon.mashup.jsservices.custom.ui.*,
                            org.wso2.carbon.mashup.utils.*,
                            javax.servlet.*;version="${javax.servlet.version.mashup}",
                            org.apache.taglibs.*,
                            org.apache.commons.logging.*;version="${commons-logging.osgi.version.mashup}",
                            javax.xml.namespace.*;version="${javax.xml.version.mashup}",
                            *;resolution:=optional
                        </Import-Package>
                        <Axis2RequiredServices>javax.servlet.Filter</Axis2RequiredServices>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>
