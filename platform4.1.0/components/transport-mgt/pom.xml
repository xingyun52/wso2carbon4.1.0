<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>transport-mgt</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Transport Management Aggregator Module</name>
    <description>A custom wso2 products or solution</description>
    <url>http://wso2.org</url>

    <modules>
        <module>org.wso2.carbon.transport.mgt/4.1.0</module>
        <module>org.wso2.carbon.transport.mgt.ui/4.1.0</module>
        <module>org.wso2.carbon.transport.http/4.1.0</module>
        <module>org.wso2.carbon.transport.https/4.1.0</module>
        <module>org.wso2.carbon.transport.jms/4.1.0</module>
        <module>org.wso2.carbon.transport.jms.ui/4.1.0</module>
        <module>org.wso2.carbon.transport.mail/4.1.0</module>
        <module>org.wso2.carbon.transport.vfs/4.1.0</module>
        <module>org.wso2.carbon.transport.fix/4.1.0</module>
	<module>org.wso2.carbon.transport.tcp/4.1.0</module>
	<module>org.wso2.carbon.transport.udp/4.1.0</module>
	<module>org.wso2.carbon.transport.nhttp/4.1.0</module>
        <module>org.wso2.carbon.transport.local/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.registry.core</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.statistics</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.service.mgt</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.utils</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>           
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.user.mgt</artifactId>
                <version>${wso2carbon.version.transport-mgt}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <wso2carbon.version.transport-mgt>${wso2carbon.version}</wso2carbon.version.transport-mgt>
        <axis2.osgi.version.range.transport-mgt>${axis2.osgi.version.range}</axis2.osgi.version.range.transport-mgt>
    </properties>

</project>

