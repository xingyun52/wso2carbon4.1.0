<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>caching</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Caching Aggregator Module</name>
    <url>http://wso2.org</url>

    <modules>
        <module>org.wso2.carbon.caching/4.1.0</module>
        <module>org.wso2.carbon.caching.ui/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.axis2.wso2</groupId>
                <artifactId>axis2</artifactId>
                <version>${orbit.version.axis2.caching}</version>
            </dependency>

            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version.caching}</version>
            </dependency>

            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.caching}</version>
            </dependency>

            <dependency>
                <groupId>org.wso2.caching</groupId>
                <artifactId>wso2caching-core</artifactId>
                <version>${wso2caching.version}</version>
            </dependency>

            <dependency>
                <groupId>org.wso2.caching</groupId>
                <artifactId>wso2caching-mar</artifactId>
                <version>${wso2caching.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.geronimo.specs</groupId>
                <artifactId>geronimo-saaj_1.3_spec</artifactId>
                <version>${geronimo.saaj.version.caching}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-saaj</artifactId>
                <version>${version.axis2}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <geronimo.saaj.version.caching>1.0.0</geronimo.saaj.version.caching>
        <wso2carbon.version.caching>${carbon.platform.version}</wso2carbon.version.caching>
        <orbit.version.axis2.caching>${orbit.version.axis2}</orbit.version.axis2.caching>
        <axis2.osgi.version.range.caching>${axis2.osgi.version.range}</axis2.osgi.version.range.caching>
        <axiom.osgi.version.range.caching>${axiom.osgi.version.range}</axiom.osgi.version.range.caching>
        <neethi.osgi.version.range.caching>${neethi.osgi.version.range}</neethi.osgi.version.range.caching>
    </properties>

</project>

