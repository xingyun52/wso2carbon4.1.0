<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>business-processes</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>bpel</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - BPEL Aggregator Module</name>
    <url>http://wso2.org</url>
    <description>BPEL Support for WSO2 Carbon</description>

    <modules>
        <module>org.wso2.carbon.bpel/4.1.0</module>
        <module>org.wso2.carbon.bpel.deployer/4.1.0</module>
        <module>org.wso2.carbon.bpel.cluster.notifier/4.1.0</module>
        <module>org.wso2.carbon.bpel.ui/4.1.0</module>
        <module>org.wso2.carbon.bpel.b4p/4.1.0</module>
        <module>org.wso2.carbon.bpel.bam.publisher/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.application.deployer</artifactId>
                <version>${wso2carbon.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.bpel.common</artifactId>
                <version>${wso2carbon.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.axis2.wso2</groupId>
                <artifactId>axis2</artifactId>
                <version>${orbit.version.axis2.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.utils</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.security.mgt</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>hsqldb.wso2</groupId>
                <artifactId>hsqldb</artifactId>
                <version>${orbit.version.hsqldb}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.datasource</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon-dom</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon-xqj</artifactId>
                    </exclusion>
                </exclusions>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version.module-mgt}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.apache.ode.wso2</groupId>
                <artifactId>ode</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>org.apache.openjpa</groupId>
                        <artifactId>openjpa</artifactId>
                    </exclusion>
                </exclusions>
                <version>${ode.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.batik.wso2</groupId>
                <artifactId>batik</artifactId>
                <version>1.7.0.wso2v1</version>
            </dependency>
            <dependency>
                <groupId>commons-collections.wso2</groupId>
                <artifactId>commons-collections</artifactId>
                <version>3.2.0.wso2v1</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.logging</artifactId>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.application.deployer.bpel</artifactId>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.unifiedendpoint.core</artifactId>
                <exclusions>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon-dom</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>net.sf.saxon</groupId>
                        <artifactId>saxon-xqj</artifactId>
                    </exclusion>
                </exclusions>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.service.mgt</artifactId>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>com.googlecode.json-simple.wso2</groupId>
                <artifactId>json-simple</artifactId>
                <version>${simple-json.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.statistics.ui</artifactId>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.service.mgt.ui</artifactId>
                <version>${wso2carbon.version.bpel}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <ode.version>${orbit.version.ode}</ode.version>
        <wso2carbon.version.bpel>${wso2carbon.version}</wso2carbon.version.bpel>
        <orbit.version.axis2.bpel>${orbit.version.axis2}</orbit.version.axis2.bpel>
        <axis2.osgi.version.range.bpel>${axis2.osgi.version.range}</axis2.osgi.version.range.bpel>
        <wso2carbon.version.module-mgt>${wso2carbon.version}</wso2carbon.version.module-mgt>
        <orbit.version.axis2.module-mgt>${orbit.version.axis2}</orbit.version.axis2.module-mgt>
        <axis2.osgi.version.range.module-mgt>${axis2.osgi.version.range}
        </axis2.osgi.version.range.module-mgt>
        <axiom.osgi.version.range.module-mgt>${axiom.osgi.version.range}
        </axiom.osgi.version.range.module-mgt>
        <junit.version.module-mgt>${junit.version}</junit.version.module-mgt>
        <simple-json.version>1.1.wso2v1</simple-json.version>
    </properties>

</project>
