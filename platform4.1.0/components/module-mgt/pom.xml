<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>module-mgt</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Module Management Aggregator Module</name>
    <url>http://wso2.org</url>

    <modules>
        <module>org.wso2.carbon.module.mgt/4.1.0</module>
        <module>org.wso2.carbon.module.mgt.ui/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.axis2.wso2</groupId>
                <artifactId>axis2</artifactId>
                <version>${orbit.version.axis2.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.utils</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.security.mgt</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.module-mgt}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version.module-mgt}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <artifactId>commons-fileupload</artifactId>
                <groupId>commons-fileupload.wso2</groupId>
                <version>${orbit.version.commons.fileuploader.module.mgt}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <wso2carbon.version.module-mgt>${wso2carbon.version}</wso2carbon.version.module-mgt>
        <orbit.version.axis2.module-mgt>${orbit.version.axis2}</orbit.version.axis2.module-mgt>
        <axis2.osgi.version.range.module-mgt>${axis2.osgi.version.range}</axis2.osgi.version.range.module-mgt>
        <axiom.osgi.version.range.module-mgt>${axiom.osgi.version.range}</axiom.osgi.version.range.module-mgt>
        <junit.version.module-mgt>${junit.version}</junit.version.module-mgt>
        <orbit.version.commons.fileuploader.module.mgt>${orbit.version.commons.fileuploader}</orbit.version.commons.fileuploader.module.mgt>
    </properties>

</project>
