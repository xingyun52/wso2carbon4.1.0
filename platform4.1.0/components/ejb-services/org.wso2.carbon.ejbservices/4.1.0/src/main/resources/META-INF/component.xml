<component xmlns="http://products.wso2.org/carbon">
    <!--custom component config builders -->
    <componentBuilders>
        <componentBuilder>
            <class>org.wso2.carbon.ejbservices.component.xml.EJBAppServerConfigBuilder</class>
        </componentBuilder>
    </componentBuilders>
    
    <EJBApplicationServers>
        <EJBApplicationServer>
            <Id>jboss</Id>
            <Name>JBoss AS</Name>
            <ProviderURL>jnp://localhost:1099</ProviderURL>
            <JNDIContextClass>org.jnp.interfaces.NamingContextFactory</JNDIContextClass>
        </EJBApplicationServer>

        <EJBApplicationServer>
            <Id>weblogic</Id>
            <Name>BEA WebLogic</Name>
            <ProviderURL>t3://localhost:7001</ProviderURL>
            <JNDIContextClass>weblogic.jndi.WLInitialContextFactory</JNDIContextClass>
        </EJBApplicationServer>

        <EJBApplicationServer>
            <Id>geronimo</Id>
            <Name>Apache Geronimo</Name>
            <ProviderURL>localhost:4201</ProviderURL>
            <JNDIContextClass>org.apache.openejb.client.RemoteInitialContextFactory</JNDIContextClass>
        </EJBApplicationServer>

        <EJBApplicationServer>
            <Id>glassfish</Id>
            <Name>GlassFish Server</Name>
            <ProviderURL>iiop://localhost:3700</ProviderURL>
            <JNDIContextClass>com.sun.appserv.naming.S1ASCtxFactory</JNDIContextClass>
        </EJBApplicationServer>

        <EJBApplicationServer>
            <Id>WebSphere</Id>
            <Name>IBM WebSphere</Name>
            <ProviderURL>iiop://localhost:2809</ProviderURL>
            <JNDIContextClass>com.ibm.websphere.naming.WsnInitialContextFactory</JNDIContextClass>
        </EJBApplicationServer>

        <EJBApplicationServer>
            <Id>generic</Id>
            <Name>Generic</Name>
            <ProviderURL></ProviderURL>
            <JNDIContextClass></JNDIContextClass>
        </EJBApplicationServer>
    </EJBApplicationServers>

</component>
