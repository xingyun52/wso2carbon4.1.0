<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>wsdlvalidator</artifactId>
    <packaging>pom</packaging>
    <version>4.1.0</version>
    <name>WSO2 Carbon - WSDL Validator Aggregator Module</name>
    <url>http://wso2.org</url>

    <modules>
        <module>org.wso2.carbon.tools.wsdlvalidator/4.1.0</module>
        <module>org.wso2.carbon.tools.wsdlvalidator.ui/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.wsdlvalidator}</version>
            </dependency>
            <dependency>
                <groupId>commons-fileupload.wso2</groupId>
                <artifactId>commons-fileupload</artifactId>
                <version>${commons-fileupload.wso2.version.wsdlvalidator}</version>
            </dependency>
            <dependency>
                <groupId>commons-httpclient.wso2</groupId>
                <artifactId>commons-httpclient</artifactId>
                <version>${commons-httpclient.wso2.version.wsdlvalidator}</version>
            </dependency>
            <dependency>
                <groupId>wsdl4j.wso2</groupId>
                <artifactId>wsdl4j</artifactId>
                <version>${wsdl4j.wso2.version.wsdlvalidator}</version>
            </dependency>
            <dependency>
                <groupId>xerces.wso2</groupId>
                <artifactId>xercesImpl</artifactId>
                <version>${xercesImpl.wso2.version.wsdlvalidator}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.ws.commons.axiom.wso2</groupId>
                <artifactId>axiom</artifactId>
                <version>${orbit.version.axiom.wsdlvalidator}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <wso2carbon.version.wsdlvalidator>${wso2carbon.version}</wso2carbon.version.wsdlvalidator>
        <commons-fileupload.wso2.version.wsdlvalidator>${commons-fileupload.wso2.version}</commons-fileupload.wso2.version.wsdlvalidator>
        <commons-httpclient.wso2.version.wsdlvalidator>${commons-httpclient.wso2.version}</commons-httpclient.wso2.version.wsdlvalidator>
        <wsdl4j.wso2.version.wsdlvalidator>${wsdl4j.wso2.version}</wsdl4j.wso2.version.wsdlvalidator>
        <orbit.version.axiom.wsdlvalidator>${orbit.version.axiom}</orbit.version.axiom.wsdlvalidator>
        <xercesImpl.wso2.version.wsdlvalidator>${xercesImpl.wso2.version}</xercesImpl.wso2.version.wsdlvalidator>
    </properties>

</project>
