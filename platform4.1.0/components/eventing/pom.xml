<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>eventing</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Eventing Aggregator Module</name>
    <description>
        This is a Carbon bundle that represent the eventing module.
    </description>
    <url>http://wso2.org</url>

    <dependencyManagement>
        <dependencies>
           <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.logging</artifactId>
                <version>${wso2carbon.version.eventing}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

            <modules>
                <module>org.wso2.carbon.eventing.core/4.1.0</module>
                <module>org.wso2.carbon.eventing/4.1.0</module>
                <module>org.wso2.carbon.eventing.ui/4.1.0</module>
                <module>org.wso2.carbon.eventing.eventsource/4.1.0</module>
                <module>org.wso2.carbon.eventing.eventsource.ui/4.1.0</module>
                <module>org.wso2.carbon.eventing.impl/4.1.0</module>
                <module>org.wso2.carbon.eventing.broker/4.1.0</module>
            </modules>

    <properties>
        <wso2carbon.version.eventing>${wso2carbon.version}</wso2carbon.version.eventing>
        <orbit.version.axis2.eventing>${orbit.version.axis2}</orbit.version.axis2.eventing>
        <savan.wso2.version.eventing>1.0.0-wso2v2</savan.wso2.version.eventing>
        <axis2.osgi.version.range.eventing>${axis2.osgi.version.range}</axis2.osgi.version.range.eventing>
        <axiom.osgi.version.range.eventing>${axiom.osgi.version.range}</axiom.osgi.version.range.eventing>
        <wso2eventing.version.eventing>${wso2eventing.version}</wso2eventing.version.eventing>
        <synapse.version.eventing>${synapse.version}</synapse.version.eventing>
    </properties>

</project>
