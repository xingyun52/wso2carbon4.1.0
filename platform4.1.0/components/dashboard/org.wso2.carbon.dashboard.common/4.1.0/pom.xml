<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>dashboard</artifactId>
        <version>4.1.0</version>

<relativePath>../../pom.xml</relativePath>
    </parent>

    <version>4.1.0</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.dashboard.common</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Dashboard Commons</name>
    <description>Common Bundle containing the shared FE/BE interfaces of the Dashboard</description>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>commons-lang</groupId>
                    <artifactId>commons-lang</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
			<dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
            <version>4.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.shindig.wso2</groupId>
            <artifactId>shindig</artifactId>
            <version>${shindig.platform.patch.version}</version>
        </dependency>
		<dependency>
			<groupId>com.google.guice.wso2</groupId>
			<artifactId>guice2</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.guava.wso2</groupId>
			<artifactId>guava</artifactId>
		</dependency>
		<dependency>
			<groupId>org.json.wso2</groupId>
			<artifactId>json</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-lang.wso2</groupId>
			<artifactId>commons-lang</artifactId>
		</dependency>

    </dependencies>

    <build>
        <plugins>
            
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.wso2.carbon.dashboard.common.*; version=1.0.0,
                            org.wso2.carbon.dashboard.common.oauth.*; version=1.0.0,
                        </Export-Package>
						<Import-Package>
							com.google.common.*;version="[1.0.0.wso2v2,2)",
                            com.google.inject.*;version="[2.0.0.wso2v2,2.5)",
			    org.json.*,
                            *;resolution:=optional                
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <shindig.platform.patch.version>1.1.0.wso2v7</shindig.platform.patch.version>
    </properties>

</project>
