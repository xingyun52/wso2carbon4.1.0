<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-components</artifactId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>scheduled-tasks</artifactId>
    <packaging>pom</packaging>
    <name>WSO2 Carbon - Scheduled Task Aggregator Module</name>
    <url>http://wso2.org</url>

    <modules>
        <module>org.wso2.carbon.task/4.1.0</module>
        <module>org.wso2.carbon.task.ui/4.1.0</module>
        <module>org.wso2.carbon.task.services/4.1.0</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${wso2carbon.version.scheduled-tasks}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.synapse</groupId>
                <artifactId>synapse-tasks</artifactId>
                <version>${synapse.version.scheduled-tasks}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.synapse</groupId>
                <artifactId>synapse-commons</artifactId>
                <version>${synapse.version.scheduled-tasks}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.axis2.wso2</groupId>
                <artifactId>axis2</artifactId>
                <version>${orbit.version.axis2.scheduled-tasks}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.ui</artifactId>
                <version>${wso2carbon.version.scheduled-tasks}</version>
            </dependency>
	    <dependency>
		<groupId>org.wso2.carbon</groupId>
		<artifactId>org.wso2.carbon.mediation.initializer</artifactId>
		<version>${mediation.initializer.version}</version>
	    </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>
        <wso2carbon.version.scheduled-tasks>${wso2carbon.version}</wso2carbon.version.scheduled-tasks>
	<mediation.initializer.version>${wso2carbon.version}</mediation.initializer.version>
        <synapse.version.scheduled-tasks>${synapse.version}</synapse.version.scheduled-tasks>
        <orbit.version.axis2.scheduled-tasks>${orbit.version.axis2}</orbit.version.axis2.scheduled-tasks>
        <axis2.osgi.version.range.scheduled-tasks>${axis2.osgi.version.range}</axis2.osgi.version.range.scheduled-tasks>
        <axiom.osgi.version.range.scheduled-tasks>${axiom.osgi.version.range}</axiom.osgi.version.range.scheduled-tasks>
    </properties>

</project>
