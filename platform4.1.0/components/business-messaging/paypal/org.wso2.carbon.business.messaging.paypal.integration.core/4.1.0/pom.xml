<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>paypal</artifactId>
        <version>4.1.0</version>
	<relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.business.messaging.paypal.integration.core</artifactId>
    <version>4.1.0</version>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - PayPal Integration Core</name>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
            <version>${wso2carbon.version.paypal}</version>
        </dependency>
        <dependency>
            <groupId>com.paypal.sdk.wso2</groupId>
            <artifactId>paypal</artifactId>
            <version>1.1.0.wso2v1</version>
        </dependency>
        <!--<dependency>
            <groupId>com.paypal.sdk</groupId>
            <artifactId>paypal-base-complete</artifactId>
            <version>1.0.0</version>-->
            <!--<scope>system</scope>
            <systemPath>${basedir}/lib/paypal-base-complete.jar</systemPath>-->
        <!--</dependency>
        <dependency>
            <groupId>com.paypal.sdk</groupId>
            <artifactId>paypal-soap</artifactId>
            <version>1.0.0</version>-->
            <!--<scope>system</scope>
            <systemPath>${basedir}/lib/paypal_stubs.jar</systemPath>-->
        <!--</dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>paypal-saaj</artifactId>
            <version>1.0.0</version>
        </dependency>-->
        <dependency>
            <groupId>org.apache.axis.wso2</groupId>
            <artifactId>axis</artifactId>
            <version>1.4.0.wso2v1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>
                            ${project.artifactId}
                        </Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <!--<Embed-Dependency>paypal-base-complete|paypal-soap|paypal-saaj</Embed-Dependency>-->
                        <Embed-Dependency>paypal</Embed-Dependency>
                        <Export-Package>
                            org.wso2.carbon.business.messaging.paypal.integration.*,
                            com.paypal.sdk.*,
                            com.paypal.soap.api.*,
                            javax.xml.soap.*; version="1.2.0"
                        </Export-Package>
                        <Import-Package>
                            javax.xml.namespace; version=0.0.0,
                            org.apache.commons.logging,
                            org.apache.axis.*,
                            org.osgi.framework,
                            wsdl.*,
                            xsl.*,
                            *; resolution:=optional
                        </Import-Package>

                    </instructions>
                </configuration>
            </plugin>

        </plugins>
    </build>


</project>
