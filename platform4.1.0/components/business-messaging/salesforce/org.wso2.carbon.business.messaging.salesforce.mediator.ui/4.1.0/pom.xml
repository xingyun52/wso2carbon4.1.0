<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <artifactId>salesforce</artifactId>
        <groupId>org.wso2.carbon</groupId>
        <version>4.1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.business.messaging.salesforce.mediator.ui</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Salesforce Business Mediator UI</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>
            
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Bundle-Activator>
                            org.wso2.carbon.business.messaging.salesforce.mediator.ui.SalesforceMediatorActivator
                        </Bundle-Activator>
                        <Carbon-Component>UIBundle</Carbon-Component>
                        <Export-Package>
                            org.wso2.carbon.business.messaging.salesforce.mediator.ui.*,
                            !javax.servlet,
                            !javax.servlet.http,
                        </Export-Package>
                        <Import-Package>
                            !javax.xml.namespace,
                            javax.xml.namespace; version=0.0.0,
                            org.apache.commons.logging,
                            org.osgi.framework,
                            org.wso2.carbon.mediator.service.*,
                            org.apache.synapse.config.xml,
                            org.apache.synapse.util.xpath,
                            org.apache.axiom.om; version="${axiom.osgi.version.range}",
                            org.jaxen,
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.apache.synapse</groupId>
            <artifactId>synapse-core</artifactId>
            <version>${synapse.version.sf}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.axis2</groupId>
                    <artifactId>axis2-codegen</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
            <version>${wso2carbon.version.sf}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.mediator.service</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
