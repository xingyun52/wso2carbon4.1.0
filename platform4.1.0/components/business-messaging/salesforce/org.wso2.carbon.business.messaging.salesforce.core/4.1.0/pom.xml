<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>
		<groupId>org.wso2.carbon</groupId>
		<artifactId>salesforce</artifactId>
		<version>4.1.0</version>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.wso2.carbon</groupId>
	<artifactId>org.wso2.carbon.business.messaging.salesforce.core</artifactId>
	<packaging>bundle</packaging>
	<name>WSO2 Carbon - Salesforce Business Client Proxy</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<!--Bundle-Activator>org.wso2.carbon.business.messaging.salesforce.core.internal.Activator</Bundle-Activator -->
						<!--Private-Package>org.wso2.carbon.business.messaging.salesforce.core.internal</Private-Package-->
						<Import-Package>
                            org.wso2.carbon.business.messaging.salesforce.stub.*;version="${carbon.platform.package.import.version.range}",
							org.apache.axiom.*; version="${axiom.osgi.version.range.sf}",
                            org.apache.axis2.*; version="${axis2.osgi.version.range.sf}",
                            org.osgi.framework,
                            *;resolution:=optional
                        </Import-Package>
						<DynamicImport-Package>*</DynamicImport-Package>
						<Export-Package>
							org.wso2.carbon.business.messaging.salesforce.core.*,
							com.sforce.soap.enterprise.*
						</Export-Package>					
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
        	<!--<dependency>
        	[Note : This codegen issue was fixed in Axis2 trunk]
			<groupId>org.apache.axis2</groupId>
			<artifactId>axis2-codegen</artifactId>
			<version>1.6-wso2v3</version>
		</dependency>-->
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.core</artifactId>
			<version>${wso2carbon.version.sf}</version>
		</dependency>
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.business.messaging.salesforce.stub</artifactId>
			<version>${wso2carbon.version.sf}</version>
		</dependency>
        <dependency>
            <groupId>org.apache.synapse</groupId>
            <artifactId>synapse-core</artifactId>
            <version>${synapse.version.sf}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.axis2</groupId>
                    <artifactId>axis2-codegen</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        
	</dependencies>
    

</project>
