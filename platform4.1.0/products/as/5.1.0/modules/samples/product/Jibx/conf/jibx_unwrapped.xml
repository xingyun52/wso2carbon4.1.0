<binding force-classes="true" xmlns:tns="http://jibx.appserver.wso2.org/library/types">

    <namespace uri="http://jibx.appserver.wso2.org/library/types" default="elements"/>

    <mapping abstract="true" class="org.wso2.appserver.jibx.library.beans.Book"
             type-name="tns:BookInformation">
        <value name="type" style="attribute" field="m_type"/>
        <value name="isbn" style="attribute" field="m_isbn"/>
        <collection field="m_authors">
            <value name="author"/>
        </collection>
        <value name="title" field="m_title"/>
    </mapping>

</binding>