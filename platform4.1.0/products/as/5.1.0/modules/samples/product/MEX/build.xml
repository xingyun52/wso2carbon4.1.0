<project default="build-all">

	<property name="wso2appserver.home" value="../../" />
	<property name="carbon.home" value="${wso2appserver.home}"/>
    <property name="appserver.lib" value="${wso2appserver.home}/lib"/>
	<property name="repo.location" value="${wso2appserver.home}/repository/deployment/server" />
	<property name="tmp.dir" value="tmp" />
	<property name="classes" value="${tmp.dir}/classes" />
	<property name="src" value="src" />
	<property name="services" value="services" />
    <property name="setup" value="ROOT"/>
    <property name="repo.services" value="axis2services"/>
    
    <ant antfile="${wso2appserver.home}/bin/build.xml"/>

    <path id="axis2.class.path">
		<pathelement path="${java.class.path}" />
		<fileset dir="${wso2appserver.home}">
			<include name="repository/lib/*.jar" />
		</fileset>
    </path>

	<target name="init" depends="clean">
		<mkdir dir="${tmp.dir}" />
		<mkdir dir="${classes}" />
		<mkdir dir="${services}" />
	</target>

	<target name="clean">
		<delete dir="${tmp.dir}" />
		<delete dir="${classes}" />
		<delete dir="${services}" />
	</target>

	<target name="compile-all" depends="init">
		<javac debug="on" destdir="${classes}">
			<src path="${src}" />
			<classpath refid="axis2.class.path" />
		</javac>
	</target>

	<target name="build-service" depends="compile-all">
		<property name="service.dir" value="${tmp.dir}/mex-services" />
		
		<mkdir dir="${service.dir}" />

		<mkdir dir="${service.dir}/META-INF" />

		<copy file="${src}/org/wso2/appserver/sample/mex/service/example1/META-INF/services.xml"
			tofile="${service.dir}/META-INF/services.xml" />
		
		<copy toDir="${service.dir}">
			<fileset dir="${classes}">
				<include name="**/example1/*.class"/>
			</fileset>
		</copy>
		
		<jar destfile="${services}/HelloWorldService1.aar">
			<fileset dir="${service.dir}" />
		</jar>
		
		<delete dir="${service.dir}" />
		
		<mkdir dir="${service.dir}" />

		<mkdir dir="${service.dir}/META-INF" />

		<copy file="${src}/org/wso2/appserver/sample/mex/service/example2/META-INF/services.xml"
			tofile="${service.dir}/META-INF/services.xml" />
			
		<copy file="${src}/org/wso2/appserver/sample/mex/service/example2/META-INF/HelloWorldService2.wsdl"
			tofile="${service.dir}/META-INF/HelloWorldService2.wsdl" />
			
		<copy file="${src}/org/wso2/appserver/sample/mex/service/example2/META-INF/HelloWorldService2_Policy.xml"
			tofile="${service.dir}/META-INF/HelloWorldService2_Policy.xml" />
		
		<copy file="${src}/org/wso2/appserver/sample/mex/service/example2/META-INF/ServiceData.xml"
			tofile="${service.dir}/META-INF/ServiceData.xml" />
		
		<copy toDir="${service.dir}">
			<fileset dir="${classes}">
				<include name="**/example2/*.class"/>
			</fileset>
		</copy>
		
		<jar destfile="${services}/HelloWorldService2.aar">
			<fileset dir="${service.dir}" />
		</jar>
		
		<delete dir="${service.dir}" />
		
		<mkdir dir="${service.dir}" />

		<mkdir dir="${service.dir}/META-INF" />

		<copy file="${src}/org/wso2/appserver/sample/mex/service/example3/META-INF/services.xml"
			tofile="${service.dir}/META-INF/services.xml" />
		
		<copy toDir="${service.dir}">
			<fileset dir="${classes}">
				<include name="**/example3/*.class"/>
			</fileset>
		</copy>
		
		<jar destfile="${services}/HelloWorldService3.aar">
			<fileset dir="${service.dir}" />
		</jar>
	</target>

	<target name="build-all" depends="build-service">
		<echo message="Copying the created aar files in to the repository" />
		<copy toDir="${repo.location}/${repo.services}">
			<fileset dir="${services}">
				<include name="**/*.aar" />
			</fileset>
		</copy>
	</target>
</project>
